@model IEnumerable<PatientManagementSystem.Models.Appointment>

<h2>Citas</h2>

<!-- Add Create Appointment Button -->
<div class="d-flex justify-content-between mb-3">
    <form method="get" asp-action="Index" class="d-flex gap-3">
        <div class="form-group">
            <label for="date">Filtrar por Fecha</label>
            <input type="date" name="date" class="form-control" />
        </div>
        <div class="form-group">
            <label for="patientId">Filtrar por Paciente</label>
            <select name="patientId" class="form-control">
                <option value="">Todos Los Pacientes</option>
                @if (ViewData["Patients"] != null && ViewData["Patients"] is IEnumerable<dynamic> patients)
                {
                    foreach (var patient in patients)
                    {
                        <option value="@patient.Id">@patient.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary align-self-end">Filtrar</button>
    </form>

    <!-- Create Appointment Button -->
    <a asp-action="CreateAppointment" class="btn btn-success align-self-end">Crear Cita</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fecha y Hora</th>
            <th>Notas</th>
            <th>Imagenes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Patient?.Name ?? "Unknown"</td>
                    <td>@appointment.Patient?.Email ?? "N/A"</td>
                    <td>@appointment.AppointmentDateTime.ToString("g")</td>
                    <td>@appointment.Notes ?? "No notes"</td>
                    <td>
                        @if (!string.IsNullOrEmpty(appointment.FrontImageUrl))
                        {
                            <img src="@appointment.FrontImageUrl" alt="Front" style="width: 50px; height: 50px;" />
                        }
                        @if (!string.IsNullOrEmpty(appointment.LeftImageUrl))
                        {
                            <img src="@appointment.LeftImageUrl" alt="Left" style="width: 50px; height: 50px;" />
                        }
                        @if (!string.IsNullOrEmpty(appointment.RightImageUrl))
                        {
                            <img src="@appointment.RightImageUrl" alt="Right" style="width: 50px; height: 50px;" />
                        }
                        @if (!string.IsNullOrEmpty(appointment.BackImageUrl))
                        {
                            <img src="@appointment.BackImageUrl" alt="Back" style="width: 50px; height: 50px;" />
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No hay Citas Disponibles.</td>
            </tr>
        }
    </tbody>
</table>
