@model PatientManagementSystem.Models.Patient
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}
@{
            var sessionValue = HttpContextAccessor.HttpContext?.Session?.GetString("AdminLoggedIn");
            } 
<h1 class="mb-4">Editar Paciente</h1>

<div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
        <div class="card shadow-sm p-4">
            <h4 class="card-title mb-3">Detalles del Paciente</h4>
            <form asp-action="Edit" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Column 1 -->
                    <div class="col-md-6">
                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del paciente" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Fecha Nacimiento</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                      
                    </div>

                    <div class="col-md-6">
                      <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Ingrese el email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contact" class="form-label">Contacto</label>
                            <input asp-for="Contact" class="form-control" placeholder="Ingrese el nÃºmero de contacto" />
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                    </div>
                   
                </div>

                <!-- Images Section -->
                <div class="row">
                    <div class="col-md-3">
                        <!-- Left Image -->
                        <div class="mb-3">
                            <label for="LeftImage" class="form-label">Imagen Izquierda</label>
                            @if (Model != null && !string.IsNullOrEmpty(Model.LeftImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.LeftImageUrl" alt="Left Image" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px;" />
                                </div>
                            }
                            <input type="file" name="LeftImage" class="form-control" />
                        </div>
                    </div>

                    

                    <div class="col-md-3">
                        <!-- Front Image -->
                        <div class="mb-3">
                            <label for="FrontImage" class="form-label">Imagen de Frente</label>
                            @if (Model != null && !string.IsNullOrEmpty(Model.FrontImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.FrontImageUrl" alt="Front Image" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px;" />
                                </div>
                            }
                            <input type="file" name="FrontImage" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <!-- Right Image -->
                        <div class="mb-3">
                            <label for="RightImage" class="form-label">Imagen Derecha</label>
                            @if (Model != null && !string.IsNullOrEmpty(Model.RightImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.RightImageUrl" alt="Right Image" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px;" />
                                </div>
                            }
                            <input type="file" name="RightImage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <!-- Back Image -->
                        <div class="mb-3">
                            <label for="BackImage" class="form-label">Imagen Trasera</label>
                            @if (Model != null && !string.IsNullOrEmpty(Model.BackImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.BackImageUrl" alt="Back Image" class="img-thumbnail rounded-circle" style="width: 100px; height: 100px;" />
                                </div>
                            }
                            <input type="file" name="BackImage" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Submit and Back Buttons -->
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-session_id="@sessionValue" class="btn btn-secondary"> Listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
