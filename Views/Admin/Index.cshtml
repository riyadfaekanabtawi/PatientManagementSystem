@model IEnumerable<PatientManagementSystem.Models.Admin>

<h2>Administradores</h2>

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar Administrador Nuevo</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.Name</td>
                    <td>@admin.Email</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@admin.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@admin.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No hay Administradores.</td>
            </tr>
        }
    </tbody>
</table>
